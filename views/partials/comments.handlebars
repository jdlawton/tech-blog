<!--A handlebars partial that is used to template displaying the comments on a post-->
<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      <p class="soft-text">{{user.username}} commented on {{format_date created_at}}</p>
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>