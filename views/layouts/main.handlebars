<!--The main handlebars layout for the site-->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>/dev/zero/ blog</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
</head>

<body>
  <div class="wrapper">
    <img id="banner" src="/images/devzeroblogtitle.gif" alt="The /dev/zero > blog logo">
    <header>
      <nav>
          {{#if loggedIn}}
            <p class="soft-text">welcome {{username}}</p>
          {{/if}}
            <a href="/">home</a>
            <a href="/dashboard">dashboard</a>
          {{#if loggedIn}}
            <button id="logout" class="btn-no-style">logout</button>
          {{else}}
            <a href="/login">login</a>
          {{/if}}
          
      </nav>
    </header>
    <main>
      {{{ body }}}
    </main>
  </div>

  {{#if loggedIn}}
  <script src="/javascript/logout.js"></script>
  {{/if}}
</body>

</html>